        @*   CONTACTER LE PROPRIETAIRE   *@
        <div class="col-lg-3 border">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <h5>Contacter le propriétaire</h5>
                        </div>
                        <div class="col-lg-12">
                            <form id="formSendMail">
                                <div class="form-group">
                                    @{
                                        ImmoWhatApp.Models.MembreModels moi = (ImmoWhatApp.Models.MembreModels)Session["moi"];
                                    }
                                    <input class="form-control" type="text" value="@moi.prenom" placeholder="@moi.prenom" disabled>
                                    <input class="form-control" type="text" value="@moi.nom" placeholder="@moi.nom" disabled>
                                    <input id="mailEmmeteur" class="form-control" value="@moi.mail" type="email" placeholder="@moi.mail" disabled>
                                    <textarea id="msg" class="form-control" rows="10">Pourriez-vous me contacter concernant cette annonce publiée svp ?</textarea>
                                    <button id="btnEnvoiMsg" class="btn btn-warning btn-block btn-lg" type="button">
                                        <img src="https://png.icons8.com/dotty/30/000000/filled-sent.png"><span>   @Resource.envoyer</span>
                                    </button>
                                </div>
                            </form>
                        </div>
