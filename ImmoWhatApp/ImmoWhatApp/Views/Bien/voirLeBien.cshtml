<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "MainPage", "Home", new { nomCommune = Model.commune, typeBien = Model.typeBien }, "")
</p>

<script>
    $('#btnEnvoiMsg').click(function () {
        
        var mailEmmeteur = $('#mailEmmeteur').val();
        var message = $('#msg').val();
        var idProprietaire = '@Model.idProprietaire';
        var sujet = "demande d'information sur un bien";

        var formData = new FormData();
        formData.append("adresseMail", $('#mailEmmeteur').val());
        formData.append("sujet", "demande d'information sur un bien");
        formData.append("message", $('#msg').val());
        formData.append("Recepteur", '@Model.idProprietaire');

        $.ajax({
            type: 'POST',
            datatype: 'json',
            url: '@Url.Action("SendMail", "Mail")',
            data: {
                "adresseMail": mailEmmeteur, "msg": message, "Recepteur": idProprietaire, "sujet": sujet },
            success: function (donnee) {
                if (donnee.result == "OK") {
                    alert("oki")
                }
                else {
                    alert(donnee.msg);
                }
                
            },
            error: function (error) {
                alert(error.responseText);
            }
        });

    });
</script>

