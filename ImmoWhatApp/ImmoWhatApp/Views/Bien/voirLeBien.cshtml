@model ImmoWhatApp.Models.BienModels

@{
    ViewBag.Title = "voirLeBien";
}


<div class="container" style="background-color:#c3c3c3;">
    <div class="row pt-3">
        <div class="col-lg-12 mb-3">
            @{
                if (Model.typeBien == 1)
                {
                    <h2>@Resource.terrain a vendre à @Model.commune</h2>
                }
                else if (Model.typeBien == 2)
                {
                    <h2>@Resource.maison a vendre à @Model.commune</h2>
                }
                else if (Model.typeBien == 3)
                {
                    <h2>@Resource.villa a vendre à @Model.commune</h2>
                }
                else if (Model.typeBien == 4)
                {
                    <h2>@Resource.appartement a vendre à @Model.commune</h2>
                }
            }
        </div>
        <div class="col-lg-9">
            <div class="row">
                <div class="col">
                    <div class="jumbotron">
                        <div class="row">
                            <div class="col-lg-7">
                                <div class="carousel slide" data-ride="carousel" id="carousel-1">
                                    <div class="carousel-inner" role="listbox">
                                        @{

                                            int nbImg = Model.nbPhotos;
                                            for (int i = 0; i < nbImg; i++)
                                            {
                                                string url = "../img/bien/" + Model.idBien + "-" + i + ".jpg";
                                                if (i == 0)
                                                {
                                                    <div class="carousel-item active"><img class="w-100 d-block" src="@url" alt="Slide Image" height="300"></div>

                                                }
                                                else
                                                {
                                                    <div class="carousel-item"><img class="w-100 d-block" height="300" src="@url" alt="image"></div>
                                                }
                                            }
                                        }



                                    </div>
                                    <div>
                                        <a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                    @{
                                        if (Model.nbPhotos > 1)
                                        {
                                            <ol class="carousel-indicators pt-1 pb-1" style="background-color:rgba(0, 0, 0, 0.70);">
                                                @{

                                                    for (int i = 0; i < nbImg; i++)
                                                    {
                                                        string url = "../img/bien/" + Model.idBien + "-" + i + ".jpg";
                                                        if (i == 0)
                                                        {
                                                            <li data-target="#carousel-1" data-slide-to="@i" class="active" style="height:10px"></li>
                                                        }
                                                        else
                                                        {
                                                            <li data-target="#carousel-1" data-slide-to="@i" style="height:10px"></li>
                                                        }
                                                    }
                                                }

                                            </ol>
                                        }
                                    }

                                </div>
                            </div>
                            <div class="col-lg-5">
                                @{
                                    string boite = Model.boite;

                                    <h3>@Html.DisplayFor(model => model.prix)€</h3>
                                    <p>
                                        @Html.DisplayFor(model => model.rue) @Html.DisplayFor(model => model.numero) @if (boite != "-1")
                                        {<span>@Resource.boite @Model.boite</span>}<br />
                                        @Html.DisplayFor(model => model.codePostale) @Html.DisplayFor(model => model.commune)
                                    </p><span>
                                        <br>
                                        @if (Model.nbChambres > 1)
                                        {
                                            @Model.nbChambres <span>@Resource.chambres</span>
                                        }
                                        else
                                        {
                                            @Model.nbChambres <span>@Resource.chambre</span>
                                        }
                                        <br />
                                        @if (Model.nbEtages > 1)
                                        {
                                            @Model.nbEtages <span>@Resource.etages</span>
                                        }
                                        else
                                        {
                                            @Model.nbEtages <span>@Resource.etage</span>
                                        }
                                        <br />
                                        @Html.DisplayNameFor(model => model.superficie) : @Html.DisplayFor(model => model.superficie) m³<br />
                                        <br />
                                        PEB : @Model.energie<br>
                                        @if (Model.anneeConstruction > 0)
                                        {
                                            <span>@Resource.anneeDeConstruction : @Model.anneeConstruction</span>
                                        }
                                        else
                                        {
                                            <span>@Resource.anneeDeConstruction : /</span>
                                        }
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
