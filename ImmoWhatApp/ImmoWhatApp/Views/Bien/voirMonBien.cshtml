@model ImmoWhatApp.Models.BienModels


<div class="container" style="background-color:#c3c3c3;">
    <div class="row pt-3">
        <div class="col-lg-12 mb-3">
            <h2>Mon bien</h2>
        </div>
        <div class="col-lg-12">
            <div class="row">
                <div class="col">
                    <div class="jumbotron">
                        <div class="row">
                            <div class="col-lg-7">
                                <div class="carousel slide" data-ride="carousel" id="carousel-1">
                                    <div class="carousel-inner" role="listbox">
                                        @{

                                            int nbImg = Model.nbPhotos;
                                            for (int i = 0; i < nbImg; i++)
                                            {
                                                string url = "../img/bien/" + Model.idBien + "-" + i + ".jpg";
                                                if (i == 0)
                                                {
                                                    <div class="carousel-item active"><img class="w-100 d-block" src="@url" alt="Slide Image" height="300"></div>

                                                }
                                                else
                                                {
                                                    <div class="carousel-item"><img class="w-100 d-block" height="300" src="@url" alt="image"></div>
                                                }
                                            }
                                        }



                                    </div>

                                    @{
                                        if (Model.nbPhotos > 1)
                                        {
                                            <div>
                                                <a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev">
                                                    <span class="carousel-control-prev-icon"></span>
                                                    <span class="sr-only">Previous</span>
                                                </a>
                                                <a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next">
                                                    <span class="carousel-control-next-icon"></span>
                                                    <span class="sr-only">Next</span>
                                                </a>
                                            </div>
                                            <ol class="carousel-indicators pt-1 pb-1" style="background-color:rgba(0, 0, 0, 0.70);">
                                                @{

                                                    for (int i = 0; i < nbImg; i++)
                                                    {
                                                        string url = "../img/bien/" + Model.idBien + "-" + i + ".jpg";
                                                        if (i == 0)
                                                        {
                                                            <li data-target="#carousel-1" data-slide-to="@i" class="active" style="height:10px"></li>
                                                        }
                                                        else
                                                        {
                                                            <li data-target="#carousel-1" data-slide-to="@i" style="height:10px"></li>
                                                        }
                                                    }
                                                }

                                            </ol>
                                        }
                                    }

                                </div>
                            </div>
                            <div class="col-lg-5">
                                @{
                                    string boite = Model.boite;

                                    <h3 id="AffPrix">@Html.DisplayFor(model => model.prix)€</h3>
                                    <p>
                                        @Html.DisplayFor(model => model.rue) @Html.DisplayFor(model => model.numero) @if (boite != "-1")
                                        {<span>@Resource.boite @Model.boite</span>}<br />
                                        @Html.DisplayFor(model => model.codePostale) @Html.DisplayFor(model => model.commune)
                                    </p><span>
                                        <br>
                                        @if (Model.nbChambres > 1)
                                        {
                                            @Model.nbChambres <span>@Resource.chambres</span>
                                        }
                                        else
                                        {
                                            @Model.nbChambres <span>@Resource.chambre</span>
                                        }
                                        <br />
                                        @if (Model.nbEtages > 1)
                                        {
                                            @Model.nbEtages <span>@Resource.etages</span>
                                        }
                                        else
                                        {
                                            @Model.nbEtages <span>@Resource.etage</span>
                                        }
                                        <br />
                                        @Html.DisplayNameFor(model => model.superficie) : @Html.DisplayFor(model => model.superficie) m³<br />
                                        <br />
                                        PEB : @Model.energie<br>
                                        @if (Model.anneeConstruction > 0)
                                        {
                                            <span>@Resource.anneeDeConstruction : @Model.anneeConstruction</span>
                                        }
                                        else
                                        {
                                            <span>@Resource.anneeDeConstruction : /</span>
                                        }
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="jumbotron">
                        <h3 class="mb-4">@Resource.description</h3>
                        <p style="min-height:90px; white-space:pre-line">@Model.libelle</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="jumbotron">
                        <div class="row">
                            <div class="col-lg-12">
                                <h3 class="mb-4">@Resource.pieces</h3>
                            </div>
                            <div class="col-lg-6">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbChambres)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbChambres)</span></div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbSdb)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbSdb)</span></div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbDressing)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbDressing)</span></div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbSam)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbSam)</span></div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbSalon)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbSalon)</span></div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbBuanderie)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbBuanderie)</span></div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbCave)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbCave)</span></div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbGrenier)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbGrenier)</span></div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbToilette)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbToilette)</span></div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbVeranda)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbVeranda)</span></div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>@Html.DisplayNameFor(model => model.nbGarage)</span></div>
                                            <div class="col-lg-3"><span>@Html.DisplayFor(model => model.nbGarage)</span></div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="jumbotron">
                        <div class="row">
                            <div class="col-lg-12">
                                <h3 class="mb-4">@Resource.options</h3>
                            </div>
                            <div class="col-lg-6">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>piscine</span></div>
                                            @{
                                                if (Model.piscine == true)
                                                {
                                                    <div class="col-lg-3"><span>oui</span></div>
                                                }
                                                else
                                                {
                                                    <div class="col-lg-3"><span>non</span></div>
                                                }
                                            }
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>cuisine équipée</span></div>
                                            @{
                                                if (Model.cuisineEquipee == true)
                                                {
                                                    <div class="col-lg-3"><span>oui</span></div>
                                                }
                                                else
                                                {
                                                    <div class="col-lg-3"><span>non</span></div>
                                                }
                                            }
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>parking</span></div>
                                            @{
                                                if (Model.parking == true)
                                                {
                                                    <div class="col-lg-3"><span>oui</span></div>
                                                }
                                                else
                                                {
                                                    <div class="col-lg-3"><span>non</span></div>
                                                }
                                            }
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>jardin</span></div>
                                            @{
                                                if (Model.jardin == true)
                                                {
                                                    <div class="col-lg-3"><span>oui</span></div>
                                                }
                                                else
                                                {
                                                    <div class="col-lg-3"><span>non</span></div>
                                                }
                                            }
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>alarme</span></div>
                                            @{
                                                if (Model.alarme == true)
                                                {
                                                    <div class="col-lg-3"><span>oui</span></div>
                                                }
                                                else
                                                {
                                                    <div class="col-lg-3"><span>non</span></div>
                                                }
                                            }
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col"><span>double vitrage</span></div>
                                            @{
                                                if (Model.doubleVitrage == true)
                                                {
                                                    <div class="col-lg-3"><span>oui</span></div>
                                                }
                                                else
                                                {
                                                    <div class="col-lg-3"><span>non</span></div>
                                                }
                                            }
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    $(document).ready(function () {
        var prix = '@Model.prix';
        prix = numberWithPoint(prix);
        $('#AffPrix').text(prix+"€");
    })

    function numberWithPoint(x) {
        return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
    }




</script>