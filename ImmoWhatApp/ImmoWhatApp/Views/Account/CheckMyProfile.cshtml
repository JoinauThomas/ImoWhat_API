@model ImmoWhatApp.Models.MembreModels

<div class="container">
    <div class="row border border-info rounded mt-3 mb-5" style="background-color:#009b84;">
        <div class="col-lg-12">
            <div class="row">
                <div class="col">
                    <h1>mon profil</h1>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col">
                    <form>
                        <div class="form-row">
                            <div class="col-lg-5">
                                <div class="form-row mb-5">
                                    <div class="col-lg-12 offset-lg-0">
                                        <span id="dateEnr">enregistré depuis le @Model.dateEnregistrement.Day/@Model.dateEnregistrement.Month/@Model.dateEnregistrement.Year</span>
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <label>@Html.DisplayNameFor(model => model.mail)</label>
                                    <input class="form-control col-10" type="email" disabled="" value="@Html.DisplayFor(model => model.mail)">
                                </div>
                                <div class="form-group col-12">
                                    <label>@Html.DisplayNameFor(model => model.nom)</label>
                                    <input class="form-control col-10" type="text" disabled="" value="@Html.DisplayFor(model => model.nom)">
                                </div>
                                <div class="form-group col-12">
                                    <label>@Html.DisplayNameFor(model => model.prenom)</label>
                                    <input class="form-control col-10" type="text" disabled="" value="@Html.DisplayFor(model => model.prenom)">
                                </div>
                                <div class="form-group d-flex flex-row justify-content-between align-items-center col-12">
                                    <div class="form-row">
                                        <div class="col-lg-12">
                                            <label class="col-form-label">@Html.DisplayNameFor(model => model.dateDeNaissance)</label>
                                        </div>
                                        <div class="col col-10 d-flex flex-row justify-content-between align-items-center align-self-center">
                                            <input class="form-control col-2" type="number" disabled="" value="@Model.dateDeNaissance.Day">
                                            <span class="col-1">/</span>
                                            <input class="form-control col-2" type="number" disabled="" value="@Model.dateDeNaissance.Month">
                                            <span class="col-1">/</span>
                                            <input class="form-control col-4" type="number" disabled="" value="@Model.dateDeNaissance.Year">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <label>@Html.DisplayNameFor(model => model.telephone)</label>
                                    <input class="form-control col-10" type="text" disabled="" value="@Html.DisplayFor(model => model.telephone)">
                                </div>
                                <div class="col-12">
                                    <button id="btnMesMessages" type="button" class="btn btn-outline-light col-6 offset-2 btn-lg">messages<span style="position:absolute; top:0; right:0; font-size:1.1em" id="nbNvMessages" class="badge badge-primary rounded-circle"></span></button>
                                </div>
                            </div>
                            <div class="col-lg-5 offset-lg-1">
                                <div class="form-row mb-2">
                                    <div class="col d-flex flex-row justify-content-center">
                                        @{
                                            if (Model.photo == "0")
                                            {
                                                <img src="~/img/membre/photo0.jpg" class="rounded-circle" style="width:50%;height:100%;max-width:47%;">
                                            }
                                            else
                                            {
                                                string urlImg = "../img/membre/photoMembre" + Model.idMembre + ".jpg";
                                                <img src="@urlImg" class="rounded-circle" style="width:50%;height:100%;max-width:47%;">
                                            }
                                        }

                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group col-12">
                                            <label>@Html.DisplayNameFor(model => model.Commune)</label>
                                            <input class="form-control col-10" type="text" disabled="" value="@Html.DisplayFor(model => model.Commune)">
                                        </div>
                                        <div class="form-group col-12">
                                            <label>@Html.DisplayNameFor(model => model.rue)</label>
                                            <input class="form-control col-10" type="text" disabled="" value="@Html.DisplayFor(model => model.rue)">
                                        </div>
                                        <div class="form-row">
                                            <div class="col d-flex col-10">
                                                <div class="form-group col-4">
                                                    <label>@Html.DisplayNameFor(model => model.numero)</label>
                                                    <input class="form-control col-12" type="text" disabled="" value="@Html.DisplayFor(model => model.numero)">
                                                </div>
                                                @{
                                                    if (Model.boite != "-1")
                                                    {
                                                        <div class="form-group col-4">
                                                            <label>@Html.DisplayNameFor(model => model.boite)</label>
                                                            <input class="form-control col-10" type="text" disabled="" value="@Html.DisplayFor(model => model.boite)">
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row mt-5">

                                    <div class="col col-10 offset-2">
                                        <button class="btn btn-danger col-4 offset-3 mr-1" type="button">supprimer</button>
                                        <button class="btn btn-warning col-4" type="button">modifier</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col d-flex flex-row justify-content-end">
                    <a href="#" style="font-size:1.5em">retour</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row border border-info rounded mt-5 mb-3" style="background-color:#009b84;">
        <div class="row" style="margin:1px;">
            <div class="col">
                <h1>Mes biens</h1>
            </div>
        </div>
        <div class="col-12" style="text-align:center">
            <img id="chargement" src="~/img/loaders/infini2.gif" style="display: none; width:10%" alt="Chargement en cours..." />
        </div>
        <div class="col-lg-12" id="PartialViewTableBiens">

            @*---- PARTIAL VIEW MesBiensListe ----*@


        </div>
        <div class="row mt-3">
            
            <div class="col d-flex flex-row justify-content-end"><button class="btn btn-success" type="button">ajouter un bien</button></div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<script>


    $(document).ready(function () {

        @*--- RECUPERE LE NOMBRE DE MAILS NON LUS ---*@
        var idMembre = '@Model.idMembre';
        $('#chargement').show();
        $.ajax({
            type: 'GET',
            datatype: 'json',
            url: '@Url.Action("GetCountOfNewMails", "Mail")',
            data: { "idMembre": idMembre },
            success: function (donnee) {
                if (donnee.result == "OK") {
                    $('#nbNvMessages').html(donnee.nbNvMsg);
                    $('#chargement').hide();
                }
                else {
                    $('#chargement').hide();
                    alert("gros problème :\n"+donnee.msg);
                }

            },
            error: function (error) {
                $('#chargement').hide();
                alert(error.responseText);
            }
        });

        @*--- RECUPERE LES BIENS DU MEMBRE -- -*@

        GetListBiens(idMembre);


        @*var x = @Model.dateEnregistrement.Day+"/"+@Model.dateEnregistrement.Month+"/"+@Model.dateEnregistrement.Year;
        $('#dateEnr').html("enregistré depuis le " + x)*@
    })

    $('#btnMesMessages').click(function () {

        location.href = '@Url.Action("VoirMesMails", "Mail", new { idMembre = @Model.idMembre })'
    })

    function GetListBiens(idMembre) {
         $.ajax({
            type: 'GET',
            datatype: 'json',
            url: '@Url.Action("_MesBiensListe", "Bien")',
            data: { "idMembre": idMembre },
            success: function (donnee) {
                    $('#PartialViewTableBiens').html(donnee);


            },
            error: function (error) {

                alert(error.text);
            }
        });
    }
</script>

