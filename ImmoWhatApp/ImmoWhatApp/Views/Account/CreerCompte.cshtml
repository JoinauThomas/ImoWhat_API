    // envoie la requete pour creer un profile

    function validateForm() {
        var mail = $('#mail').val();
        var pswd = $('#pswd').val();
        var pswd2 = $('#pswd2').val()
        var nom = $('#nom').val();
        var prenom = $('#prenom').val();
        var commune = $('#Commune').val();
        var rue = $('#rue').val();
        var num = $('#numero').val();

        var ok = true;

        if (mail == "") {
            $('#errorMail').html("veuillez mettre une adresse mail svp");
            $('#errorMail').show();
            ok = false;
        }
        else {
            $('#errorMail').hide();
        }

        if (pswd != pswd2) {
            $('#errorPswd').html("les deux mots de passes ne sont pas identiques");
            $('#errorPswd').show();
            $('#errorPswd2').html("les deux mots de passes ne sont pas identiques");
            $('#errorPswd2').show();
            ok = false;
        }
        else if (pswd.length < 6 || pswd2.length < 6) {
            if (pswd.length < 6) {
                $('#errorPswd').html("minimum 6 lettres");
                $('#errorPswd').show();
                ok = false;
            }
            if (pswd2.length < 6) {
                $('#errorPswd2').html("minimum 6 lettres");
                $('#errorPswd2').show();
                ok = false;
            }
        }
        else {
            $('#errorPswd2').hide();
            $('#errorPswd').hide();
        }

        if (nom == "") {
            $('#errorNom').html("veuillez mettre un nom svp");
            $('#errorNom').show();
            ok = false;
        }
        else {
            $('#errorNom').hide();
        }
        if (prenom == "") {
            $('#errorPrenom').html("veuillez mettre un prénom svp");
            $('#errorPrenom').show();
            ok = false;
        }
        else {
            $('#errorPrenom').hide();
        }
        if (commune == "") {
            $('#errorCommune').html("veuillez mettre une commune svp");
            $('#errorCommune').show();
            ok = false;
        }
        else {
            $('#errorCommune').hide();
        }
        if (rue == "") {
            $('#errorRue').html("veuillez mettre votre rue svp");
            $('#errorRue').show();
            ok = false;
        }
        else {
            $('#errorRue').hide();
        }
        if (num == "") {
            $('#errorNumero').html("veuillez mettre un numero svp");
            $('#errorNumero').show();
            ok = false;
        }
        else {
            $('#errorNumero').hide();
        }

        return ok;
            
    }
    function checkIfPhotoIsNull() {
        var photo = $('#photo').attr('src')
        if (photo == "/img/membre/photo0.jpg")
            photo = 0
        else
            photo = 1
        return photo;
    }

    $('#btnEnvoiForm').click(function () {
        
        
        var formValide = validateForm();
        if (formValide == true) {
            $("#chargement").show();
            var photo = $('#photo').attr('src')
            var mail = $('#mail').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("CheckIfMailExists", "Account")',
                datatype: 'html',
                data: { mail: mail },
                success: function (donnee) {
                    if (donnee == "True") {
                        $("#chargement").hide();
                        $('#modalTexte').html("cette adresse mail existe déja");
                        $('#MyModal').dialog({
                            open: function (event, ui, e) { $(".ui-dialog-titlebar-close").hide(); },
                            resizable: false,
                            height: "auto",
                            width: "400",
                            modal: true,
                            title: 'error',
                            buttons: {
                                "ok": function () {
                                    $(this).dialog("close");
                                }

                            }
                        });
                    }
                    else {
                        var photo = checkIfPhotoIsNull()
                        var formData = new FormData($('#formAjoutMembre')[0]);
                        formData.append("photo", photo)
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("CreerCompte", "Account")',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (donnee) {
                                $("#chargement").hide();
                                $('#modalTexte').html("votre compte a été créé");
                                $('#MyModal').dialog({
                                    open: function (event, ui, e) { $(".ui-dialog-titlebar-close").hide(); },
                                    resizable: false,
                                    height: "auto",
                                    width: "400",
                                    modal: true,
                                    title: 'parfait!',
                                    buttons: {
                                        "ok": function () {
                                            $(this).dialog("close");
                                            location.href = "../Home/Index";
                                        }

                                    }
                                });

                            },
                            error: function (error) {
                                alert("error");
                            }
                        });
                    }


                },
                error: function (error) {
                    alert("error");
                }
            });
        }

    });


