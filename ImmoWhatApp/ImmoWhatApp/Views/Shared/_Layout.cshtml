<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/assets/font/css/open-iconic.css" rel="stylesheet">

    @*pour le jquery*@
    <script src="http://code.jquery.com/jquery-1.9.0rc1.js"></script>
    <script src="http://code.jquery.com/jquery-migrate-1.0.0rc1.js"></script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light col-lg-12" style="background-color: green">
        <a class="navbar-brand col-lg-2" href="#">IMMOWHAT</a>
        <span class="col-lg-6" style="background-color: grey">The true value of your property <span class="sr-only">(current)</span></span>




        @{
            ImmoWhatApp.Models.MembreModels moi = (ImmoWhatApp.Models.MembreModels)Session["moi"];
            if (Session["moi"] == null)
            {
                <nav class="nav col-lg-3">
                    <a class="nav-link col-lg" href="#">@Html.ActionLink("se connecter", "connexion", "Account", new { area = "" }, null)</a>
                    <a class="nav-link col-lg" href="#" id="deconnexion">@Html.ActionLink("s'inscrire", "CreerCompte", "Account", new { area = "" }, null)</a>
                </nav>
            }
            else
            {
                <nav class="nav col-lg-3">
                    <a class="nav-link col-lg" href="#">mon profile</a>
                    <a class="nav-link col-lg" href="#" id="deconnexion">se deconnecter</a>
                </nav>

            }
        }
        <ul class="nav navbar-nav col-lg-1">
            <li class="nav-item dropdown col-lg-1 ">

                <div class="btn-group dropleft">
                    <button type="button" class="btn btn-secondary btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        FR
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="#">@Html.ActionLink("EN", "SetCulture", "Home", new { culture = "en" }, null)</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("FR", "SetCulture", "Home", new { culture = "fr" }, null)</a>
                        <a class="dropdown-item" href="#">NL</a>
                    </div>
                </div>
            </li>
        </ul>
    </nav>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <div id="modal_connection" style="display:none">
        <p id="modalTexte" class="modal-contents">aaaaaaa</p>
    </div>
    <script>
        $('#deconnexion').click(function () {

            $.ajax({
                type: 'POST',
                datatype: 'json',
                url: '@Url.Action("deconnexion", "Account")',
                success:
                function (response) {
                    if (response.result != "OK") {
                        $('#modalTexte').html("probleme detecté");
                        $('#modal_connection').dialog({
                            open: function (event, ui, e) { $(".ui-dialog-titlebar-close").hide(); },
                            resizable: false,
                            height: "auto",
                            width: "400",
                            modal: true,
                            title: '@Resource.desole',
                            buttons: {
                                "ok": function () { $(this).dialog("close") }
                            }
                        })
                    }
                    else {
                        $('#modalTexte').html("au revoir " + " " + response.nom + " " + response.prenom);
                        $('#modal_connection').dialog({

                            open: function (event, ui) { $(".ui-dialog-titlebar-close").hide(); },
                            resizable: false,
                            height: "auto",
                            width: "400",
                            modal: true,
                            title: 'au revoir',

                            buttons: {
                                "ok": function () {
                                    $(this).dialog("close");
                                    location.href = "../Home/Index";
                                }
                            }
                        });

                    }
                },
                error:
                function (response) {
                    alert("un problème a été détecté... " + response.nom);
                }
            })
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>

    <!-- inclusion des libraries jQuery et jQuery UI (fichier principal et plugins) -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.min.js"></script>

</body>
</html>